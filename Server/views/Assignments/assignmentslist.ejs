<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <h1><%= title %></h1>
            <a href="/assignmentslist/add" class="btn btn-primary"
            role="button">
                <i class="fas fa-plus-circle"></i>Add Assignment
            </a>

            <table class="table table-bordered table-striped table-hover">
                <thread>
                    <tr class="d-flex">
                        <th class="text-center col-2">Name</th>
                        <th class="text-center col-2">Due</th>
                        <th class="text-center col-2">Description</th>
                        <th class="text-center col-2">Class</th>
                        <th class="text-center col-2">Actions</th>

                    </tr>
                </thread>
                <tbody>

                    <% assignments.forEach(assignment => { %>
                        <tr>
                            <td class="text-center col-2"><%= assignment.Name %></td>
                            <td class="text-center col-2"><%= assignment.Due %></td>
                            <td class="text-center col-2"><%= assignment.Description %></td>
                            <td class="text-center col-2"><%= assignment.Class %></td>
                            <td class="text-center col-1">
                                
                                <a href="/assignmentslist/edit/<%= assignment._id%>" class="btn btn-primary btn-sm">
                                    <i class="fas fa-pencil-alt"></i>Edit
                                </a>
                                <a href="/assignmentslist/delete/<%= assignment._id%>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this?');">
                                    <i class="fas fa-trash-alt"></i>Delete
                                </a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</main>