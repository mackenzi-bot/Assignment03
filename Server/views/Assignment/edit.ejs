<%- include ../Partials/header.ejs %>
<%- include Partials/main_nav.ejs %>
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Assignment Name</label>
                    <input type="text" class="form-control" id="nameTextField"
                    placeholder="Enter the name of the assignment" name="Name" value="<%=Assignment.Name%>" required>
                </div>
                <div class="form-group">
                    <label for="dateTextField">Due Date</label>
                    <input type="text" class="form-control" id="dateTextField"
                    placeholder="Enter the due date" 
                    name="Date" value="<%=Assignment.Date%>" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextField">Assignment Description</label>
                    <textarea type="text" class="form-control" id="descriptionTextField"
                    placeholder="Enter the Assignment's Description" name="Description" required><%=Assignment.Description%></textarea>
                </div>
                <div class="form-group">
                    <label for="classTextField">Class</label>
                    <input type="text" class="form-control" id="classTextField"
                    placeholder="Enter the Class" name="Class" value="<%=Assignment.Class%>" required>
                </div>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-solid fa-edit"></i>
                    Submit</button>
                <a href="/assignmentstracker" class="btn btn-warning">
                    <i class="fas fa-undo"></i>Cancel</a>
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs %>